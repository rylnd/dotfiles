--type-add=ruby=.haml,.prawn,.rake,.rsel,.yml
--type-add=css=.sass,.scss,.less,.css
--type-add=js=.coffee,.js.coffee
--type-set=cucumber=.feature
--type-set=tritium=.ts
--ignore-dir=vendor
--ignore-dir=tmp
--ignore-dir=log
--ignore-dir=coverage
--ignore-dir=metrics
--ignore-dir=production_data
--ignore-dir=fixtures

# vi/vim swap files
--ignore-file=match:/[._].*\.swp$/
# dump files
--ignore-file=match:/dump$/
